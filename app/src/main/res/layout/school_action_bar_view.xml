<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:id="@+id/action_bar"
			  android:layout_width="wrap_content"

			  android:layout_height="wrap_content"
			  android:orientation="vertical">

	<RelativeLayout
			android:layout_width="fill_parent"
			android:layout_height="50dp"
			android:background="@drawable/school_action_bar_background"
			android:orientation="horizontal">


		<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:layout_alignParentLeft="true"
				android:layout_alignParentTop="true"
				>


			<ImageView
					android:id="@+id/menu_drawer"
					style="@style/school_menu_drawer_button"
					android:src="@drawable/menu"

					/>


			<TextView
					android:id="@+id/title"
					style="@style/school_title_text"
					android:text="School Hub"/>
		</LinearLayout>
		<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:layout_alignParentRight="true"
				>

			<ImageView
					android:id="@+id/save"
					style="@style/school_generic_button"
					android:src="@drawable/save_white"

					android:visibility="gone"
					android:text=""/>


			<ProgressBar
					android:id="@+id/downloadProgress"
					style="?android:attr/progressBarStyleLarge"
					android:layout_width="35dp"
					android:layout_height="35dp"
					android:layout_margin="10dp"
					android:visibility="gone"
					android:layout_centerHorizontal="true"/>

			<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/iconView"

					style="@style/style_button_one"
					android:padding="3dp"


					android:background="@drawable/school_round_white_button_layout"

					android:orientation="horizontal">


				<RelativeLayout
						android:id="@+id/main_widget"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="center_horizontal"
						android:focusable="true">

					<ImageView
							android:id="@+id/icon"
							android:layout_width="30dp"
							android:layout_height="30dp"
							android:background="@drawable/message_icon"
							android:contentDescription="image"
							android:scaleType="center"/>

					<TextView
							android:id="@+id/txt_count"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_marginLeft="-5dip"
							android:layout_toRightOf="@+id/icon"
							android:background="@drawable/badge_count_rectangle"
							android:contentDescription="badge"
							android:gravity="center"
							android:textColor="@android:color/white"
							android:textStyle="bold"
							android:text="1"
							android:visibility="visible"/>

				</RelativeLayout>

			</LinearLayout>
			<Button
					android:id="@+id/refresh"
					style="@style/style_button_one"
					android:layout_width="70dp"
					android:layout_height="35dp"
					android:visibility="gone"
					android:background="@drawable/school_round_white_button_layout"
					android:text="Refresh"></Button>


			<LinearLayout
					android:id="@+id/refresh_divider"
					android:layout_width="1dp"
					android:layout_height="26dp"
					android:orientation="horizontal"
					android:layout_gravity="center"
					android:background="@drawable/school_action_bar_icon_divider"
					android:visibility="gone"
					>
			</LinearLayout>



			<Button
					android:id="@+id/editItem"
					style="@style/style_button_one"
					android:layout_width="70dp"
					android:layout_height="35dp"
					android:visibility="gone"
					android:background="@drawable/school_round_white_button_layout"
					android:text="Edit"></Button>

			<LinearLayout
					android:id="@+id/edit_divider"
					android:layout_width="1dp"
					android:layout_height="26dp"
					android:orientation="horizontal"
					android:layout_gravity="center"
					android:background="@drawable/school_action_bar_icon_divider"
					android:visibility="gone"
					>
			</LinearLayout>


			<Button
					android:id="@+id/add"
					style="@style/style_button_one"
					android:layout_width="70dp"
					android:visibility="gone"
					android:layout_height="35dp"
					android:background="@drawable/school_round_white_button_layout"
					android:text="Add"></Button>

			<Button
					android:id="@+id/transfer"
					style="@style/style_button_one"
					android:layout_width="70dp"
					android:visibility="gone"
					android:layout_height="35dp"
					android:background="@drawable/school_round_white_button_layout"
					android:text="Options"></Button>

			<Button
					android:id="@+id/edit"
					style="@style/style_button_one"
					android:layout_width="70dp"
					android:visibility="gone"
					android:layout_height="35dp"
					android:background="@drawable/school_round_white_button_layout"
					android:text="Edit"></Button>



			<LinearLayout
					android:id="@+id/add_divider"
					android:layout_width="1dp"
					android:layout_height="26dp"
					android:orientation="horizontal"
					android:layout_gravity="center"
					android:background="@drawable/school_action_bar_icon_divider"
					android:visibility="gone"
					>
			</LinearLayout>




			<Button
					android:id="@+id/logout"
					style="@style/style_button_one"
					android:layout_width="70dp"
					android:visibility="gone"
					android:layout_height="35dp"
					android:background="@drawable/school_round_white_button_layout"
					android:text="Sign Out"></Button>


		</LinearLayout>
	</RelativeLayout>


</LinearLayout>