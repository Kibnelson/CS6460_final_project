<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
			 android:id="@+id/root"
			 android:layout_width="fill_parent"
			 android:layout_height="fill_parent"
			 android:background="@drawable/school_layer_background">

	<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_gravity="center"
			android:orientation="vertical">


		<FrameLayout
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:background="@drawable/school_layer_background">

			<LinearLayout
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:orientation="vertical">


				<LinearLayout
						android:layout_width="fill_parent"
						android:layout_height="fill_parent"

						android:orientation="vertical">


					<LinearLayout
							android:layout_width="fill_parent"
							android:layout_height="wrap_content"
							android:gravity="center"
							android:background="@drawable/school_background"
							android:layout_gravity="center"
							android:orientation="horizontal">


					</LinearLayout>


					<LinearLayout
							android:layout_width="fill_parent"
							android:layout_height="fill_parent"
							android:layout_margin="10dp"
							android:background="@drawable/school_background">


						<LinearLayout
								android:layout_width="fill_parent"
								android:layout_height="match_parent"
								android:orientation="vertical">

							<LinearLayout

									android:id="@+id/progressBarSchools"
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:gravity="center"
									android:layout_gravity="center"
									android:orientation="horizontal">


								<ProgressBar
										style="@style/progressbar_field"/>

							</LinearLayout>


							<RelativeLayout
									android:layout_width="fill_parent"
									android:layout_height="40dp">


								<TextView
										android:textColor="@color/blackcolor"
										android:id="@+id/documentName"
										android:layout_width="wrap_content"
										android:layout_margin="5dp"
										android:gravity="center_vertical"
										android:layout_height="match_parent"
										android:text="Document Name"
										/>


								<LinearLayout
										android:layout_width="wrap_content"
										android:layout_height="wrap_content"
										android:orientation="horizontal"
										android:id="@+id/approveButtons"
										android:layout_alignParentRight="true"
										>




									<Button
											android:id="@+id/commentButton"
											style="@style/style_button_one"
											android:layout_width="100dp"
											android:layout_height="30dp"
											android:layout_margin="5dp"
											android:background="@drawable/school_rectangle_button_layout"
											android:text="Comment"/>
									<Button
											android:id="@+id/closeDocument"
											style="@style/style_button_one"
											android:layout_width="150dp"
											android:layout_height="30dp"
											android:layout_margin="5dp"
											android:background="@drawable/school_rectangle_button_layout"
											android:text="Close Document"/>

								</LinearLayout>
							</RelativeLayout>

							<LinearLayout
									android:layout_width="fill_parent"
									android:layout_height="1dp"
									android:orientation="horizontal"
									android:background="@color/greycolor"/>


							<RelativeLayout
									android:layout_width="fill_parent"
									android:layout_height="fill_parent"
									android:orientation="horizontal">




								<ImageView
										android:layout_width="fill_parent"
										android:layout_height="fill_parent"
										android:id="@+id/imageView"/>

								<com.github.barteksc.pdfviewer.PDFView
										android:id="@+id/pdfviewer"
										android:layout_width="fill_parent"
										android:layout_height="fill_parent"/>

								<RelativeLayout
										android:layout_alignParentLeft="true"
										android:layout_width="wrap_content"
										android:layout_height="wrap_content"
										android:layout_marginLeft="5dp"
										android:layout_marginTop="5dp"
										android:layout_marginBottom="5dp">

									<ExpandableListView
											android:id="@+id/documentStatusList"
											android:layout_alignParentBottom="true"
											android:layout_width="300dp"
											android:layout_weight="1"
											android:layout_height="wrap_content"
											android:background="@drawable/school_layer_background"
											android:cacheColorHint="#00000000"
											android:indicatorRight="?android:attr/expandableListPreferredItemIndicatorRight"
											android:groupIndicator="@android:color/transparent"

											></ExpandableListView>


								</RelativeLayout>


							</RelativeLayout>


						</LinearLayout>


					</LinearLayout>


				</LinearLayout>


			</LinearLayout>


		</FrameLayout>


	</LinearLayout>

</FrameLayout>