<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:layout_width="fill_parent"
			  android:layout_height="wrap_content"
			  android:orientation="horizontal">

	<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:orientation="horizontal">

		<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_margin="10dp"
				android:layout_gravity="center_vertical"
				android:orientation="vertical">

			<RelativeLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center_vertical"
					android:orientation="horizontal">


				<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:orientation="horizontal">
					<TextView
							android:id="@+id/groupPositionChild"
							style="@style/list_item_text"
							android:layout_alignParentLeft="true"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"

							android:layout_gravity="left|center"
							android:gravity="left|center"
							android:text="1"
							android:textColor="@color/school_list_item_text"/>
					<TextView
							android:id="@+id/childname"
							style="@style/list_item_text"
							android:layout_alignParentLeft="true"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_gravity="left|center"
							android:gravity="left|center"
							android:text="testyyyy"
							android:textColor="@color/school_list_item_text"/>


				</LinearLayout>
			</RelativeLayout>

			<RelativeLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center_vertical"
					android:orientation="horizontal">


				<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:orientation="horizontal">

					<ImageView

							android:id="@+id/voice_q_c"
							android:layout_width="40dp"
							android:layout_height="40dp"
							android:layout_gravity="center"
							android:src="@drawable/voice"/>

					<ImageView

							android:id="@+id/write_q_c"
							android:layout_width="40dp"
							android:layout_height="40dp"
							android:layout_gravity="center"
							android:src="@drawable/write"/>

					<ImageView

							android:id="@+id/picture_q_c"
							android:layout_width="40dp"
							android:visibility="gone"
							android:layout_height="40dp"
							android:layout_gravity="center"
							android:src="@drawable/camera"/>

					<LinearLayout
							android:id="@+id/recommendLayout"
							android:visibility="gone"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:orientation="horizontal">

						<ImageView

								android:id="@+id/recommend"
								android:layout_width="40dp"
								android:layout_height="40dp"
								android:layout_gravity="center"
								android:src="@drawable/recommend"/>

					</LinearLayout>

					<LinearLayout
							android:id="@+id/recommendedLayout"
							android:visibility="gone"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:orientation="horizontal">

						<ImageView

								android:id="@+id/recommended"
								android:layout_width="40dp"
								android:layout_height="40dp"
								android:layout_gravity="center"
								android:src="@drawable/recommend"/>

					</LinearLayout>
					<LinearLayout
							android:id="@+id/recommendOptionsLayout"
							android:visibility="gone"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:orientation="horizontal">

						<ImageView

								android:id="@+id/recommendOptions"
								android:layout_width="40dp"
								android:layout_height="40dp"
								android:layout_gravity="center"
								android:src="@drawable/recommended"/>

					</LinearLayout>

					<!--<View-->
							<!--android:layout_width="1dip"-->
							<!--android:layout_height="40dp"-->
							<!--android:background="#393b3e"-->
							<!--android:layout_margin="2dp"-->
							<!--android:layout_centerHorizontal="true"/>-->



					<LinearLayout
							android:id="@+id/voteLayout"
							android:visibility="gone"
							android:layout_width="wrap_content"
							android:layout_alignParentRight="true"
							android:layout_height="wrap_content"
							android:orientation="horizontal">

						<TextView
								android:id="@+id/thumbsupValue"
								style="@style/list_item_text"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="1"/>


						<ImageView

								android:id="@+id/thumbsup"
								android:layout_width="40dp"
								android:layout_height="40dp"
								android:layout_gravity="center"
								android:src="@drawable/thumb_up"/>



						<TextView
								android:id="@+id/thumbsdownValue"
								style="@style/list_item_text"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="1"/>
						<ImageView

								android:id="@+id/thumbsdown"
								android:layout_width="40dp"
								android:layout_height="40dp"
								android:layout_gravity="center"
								android:src="@drawable/thumb_down"/>
					</LinearLayout>


				</LinearLayout>




			</RelativeLayout>


		</LinearLayout>

		<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_margin="10dp"
				android:layout_gravity="center_vertical"
				android:orientation="vertical">


			<RelativeLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center_vertical"
					android:orientation="horizontal">
				<LinearLayout
						android:layout_width="wrap_content"
						android:layout_alignParentRight="true"
						android:layout_height="wrap_content"
						android:orientation="horizontal">

				<LinearLayout
						android:id="@+id/gradesLayout"
						android:visibility="gone"
						android:layout_width="wrap_content"
						android:layout_alignParentRight="true"
						android:layout_height="wrap_content"
						android:orientation="horizontal">

						<ImageView

							android:id="@+id/wrong"
							android:layout_width="40dp"
							android:layout_height="40dp"
							android:layout_gravity="center"
							android:src="@drawable/cancel"/>

					<ImageView

							android:id="@+id/tick"
							android:layout_width="40dp"
							android:layout_height="40dp"
							android:layout_gravity="center"
							android:src="@drawable/accept"/>
				</LinearLayout>
					<CheckBox
							android:id="@+id/childCheckbox"
							android:layout_width="40dp"
							android:layout_height="40dp"
							android:layout_gravity="center_vertical"
							android:focusable="false"
							android:clickable="false"
							android:layout_alignParentRight="true"/>



				</LinearLayout>




			</RelativeLayout>


		</LinearLayout>


	</LinearLayout>

</LinearLayout>