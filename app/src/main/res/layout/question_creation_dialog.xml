<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/root"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:background="@drawable/school_layer_background_registration"
		android:orientation="vertical"
		>

	<FrameLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			>


		<ScrollView android:id="@+id/ScrollView01"
					android:layout_width="fill_parent" android:layout_height="wrap_content"
				>

			<LinearLayout
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:orientation="vertical">

				<LinearLayout
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:background="@drawable/school_form_background"
						android:gravity="center"
						android:orientation="vertical">

					<LinearLayout
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							style="@style/school_list_background_layout"
							android:gravity="center"
							android:orientation="horizontal">

						<TextView
								android:layout_width="140dp"
								android:layout_height="wrap_content"
								android:layout_gravity="left"
								android:gravity="left"
								style="@style/school_text_color"
								android:text="Question">
						</TextView>



						<LinearLayout
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"

								android:gravity="center"
								android:layout_gravity="center"
								android:orientation="vertical">

							<EditText
									android:id="@+id/qName"
									android:layout_width="150dp"
									style="@style/school_text_color"
									android:background="@drawable/school_rectangle_editfield_layout"
									android:layout_height="wrap_content"
									android:layout_gravity="center"/>

							<LinearLayout
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"

									android:gravity="left"
									android:layout_gravity="left"
									android:orientation="horizontal">

								<ImageView

										android:id="@+id/voice_q"
										android:layout_width="40dp"
										android:layout_height="40dp"
										android:layout_gravity="center"
										android:src="@drawable/voice"/>

								<ImageView

										android:id="@+id/write_q"
										android:layout_width="40dp"
										android:layout_height="40dp"
										android:layout_gravity="center"
										android:src="@drawable/write"/>

							</LinearLayout>

						</LinearLayout>





					</LinearLayout>


				</LinearLayout>



				<LinearLayout
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:gravity="center"
						android:orientation="vertical">

					<LinearLayout
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							style="@style/school_list_background_layout"
							android:gravity="center"
							android:orientation="horizontal">

						<TextView
								android:layout_width="140dp"
								android:layout_height="wrap_content"
								android:layout_gravity="left"
								android:gravity="left"
								style="@style/school_text_color"
								android:text="1 Choice">
						</TextView>



						<LinearLayout
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"

								android:gravity="center"
								android:layout_gravity="center"
								android:orientation="vertical">

							<EditText
									android:id="@+id/choice_1"
									android:layout_width="150dp"
									style="@style/school_text_color"
									android:background="@drawable/school_rectangle_editfield_layout"
									android:layout_height="wrap_content"
									android:layout_gravity="center"/>

							<LinearLayout
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"

									android:gravity="left"
									android:layout_gravity="left"
									android:orientation="horizontal">

								<ImageView

										android:id="@+id/voice_choice_1"
										android:layout_width="40dp"
										android:layout_height="40dp"
										android:layout_gravity="center"
										android:src="@drawable/voice"/>

								<ImageView

										android:id="@+id/write_choice_1"
										android:layout_width="40dp"
										android:layout_height="40dp"
										android:layout_gravity="center"
										android:src="@drawable/write"/>
								<CheckBox
										android:id="@+id/checkbox_choice_1"
										android:layout_width="40dp"
										android:layout_height="40dp"
										android:layout_gravity="center_vertical"
										android:focusable="false"
										android:clickable="false"
										android:duplicateParentState="true"/>
							</LinearLayout>

						</LinearLayout>





					</LinearLayout>


				</LinearLayout>



				<LinearLayout
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:background="@drawable/school_form_background"
						android:gravity="center"
						android:orientation="vertical">

					<LinearLayout
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							style="@style/school_list_background_layout"
							android:gravity="center"
							android:orientation="horizontal">

						<TextView
								android:layout_width="140dp"
								android:layout_height="wrap_content"
								android:layout_gravity="left"
								android:gravity="left"
								style="@style/school_text_color"
								android:text="2 Choice">
						</TextView>



						<LinearLayout
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"

								android:gravity="center"
								android:layout_gravity="center"
								android:orientation="vertical">

							<EditText
									android:id="@+id/choice_2"
									android:layout_width="150dp"
									style="@style/school_text_color"
									android:background="@drawable/school_rectangle_editfield_layout"
									android:layout_height="wrap_content"
									android:layout_gravity="center"/>

							<LinearLayout
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"

									android:gravity="left"
									android:layout_gravity="left"
									android:orientation="horizontal">

								<ImageView

										android:id="@+id/voice_choice_2"
										android:layout_width="40dp"
										android:layout_height="40dp"
										android:layout_gravity="center"
										android:src="@drawable/voice"/>

								<ImageView

										android:id="@+id/write_choice_2"
										android:layout_width="40dp"
										android:layout_height="40dp"
										android:layout_gravity="center"
										android:src="@drawable/write"/>
								<CheckBox
										android:id="@+id/checkbox_choice_2"
										android:layout_width="40dp"
										android:layout_height="40dp"
										android:layout_gravity="center_vertical"
										android:focusable="false"
										android:clickable="false"
										android:duplicateParentState="true"/>
							</LinearLayout>

						</LinearLayout>





					</LinearLayout>


				</LinearLayout>


				<LinearLayout
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:gravity="center"
						android:orientation="vertical">

					<LinearLayout
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							style="@style/school_list_background_layout"
							android:gravity="center"
							android:orientation="horizontal">

						<TextView
								android:layout_width="140dp"
								android:layout_height="wrap_content"
								android:layout_gravity="left"
								android:gravity="left"
								style="@style/school_text_color"
								android:text="3 Choice">
						</TextView>



						<LinearLayout
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"

								android:gravity="center"
								android:layout_gravity="center"
								android:orientation="vertical">

							<EditText
									android:id="@+id/choice_3"
									android:layout_width="150dp"
									style="@style/school_text_color"
									android:background="@drawable/school_rectangle_editfield_layout"
									android:layout_height="wrap_content"
									android:layout_gravity="center"/>

							<LinearLayout
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"

									android:gravity="left"
									android:layout_gravity="left"
									android:orientation="horizontal">

								<ImageView

										android:id="@+id/voice_choice_3"
										android:layout_width="40dp"
										android:layout_height="40dp"
										android:layout_gravity="center"
										android:src="@drawable/voice"/>

								<ImageView

										android:id="@+id/write_choice_3"
										android:layout_width="40dp"
										android:layout_height="40dp"
										android:layout_gravity="center"
										android:src="@drawable/write"/>
								<CheckBox
										android:id="@+id/checkbox_choice_3"
										android:layout_width="40dp"
										android:layout_height="40dp"
										android:layout_gravity="center_vertical"
										android:focusable="false"
										android:clickable="false"
										android:duplicateParentState="true"/>
							</LinearLayout>

						</LinearLayout>





					</LinearLayout>


				</LinearLayout>

				<LinearLayout
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:gravity="center"
						android:background="@drawable/school_form_background"
						android:orientation="vertical">

					<LinearLayout
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							style="@style/school_list_background_layout"
							android:gravity="center"
							android:orientation="horizontal">

						<TextView
								android:layout_width="140dp"
								android:layout_height="wrap_content"
								android:layout_gravity="left"
								android:gravity="left"
								style="@style/school_text_color"
								android:text="4 Choice">
						</TextView>



						<LinearLayout
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"

								android:gravity="center"
								android:layout_gravity="center"
								android:orientation="vertical">

							<EditText
									android:id="@+id/choice_4"
									android:layout_width="150dp"
									style="@style/school_text_color"
									android:background="@drawable/school_rectangle_editfield_layout"
									android:layout_height="wrap_content"
									android:layout_gravity="center"/>

							<LinearLayout
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"

									android:gravity="left"
									android:layout_gravity="left"
									android:orientation="horizontal">

								<ImageView

										android:id="@+id/voice_choice_4"
										android:layout_width="40dp"
										android:layout_height="40dp"
										android:layout_gravity="center"
										android:src="@drawable/voice"/>

								<ImageView

										android:id="@+id/write_choice_4"
										android:layout_width="40dp"
										android:layout_height="40dp"
										android:layout_gravity="center"
										android:src="@drawable/write"/>
								<CheckBox
										  android:id="@+id/checkbox_choice_4"
										  android:layout_width="40dp"
										  android:layout_height="40dp"
										  android:layout_gravity="center_vertical"
										  android:focusable="false"
										  android:clickable="false"
										  android:duplicateParentState="true"/>

							</LinearLayout>

						</LinearLayout>





					</LinearLayout>


				</LinearLayout>




				<LinearLayout
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"

						android:background="@drawable/school_form_background"
						android:gravity="center"
						android:orientation="horizontal">

					<LinearLayout
							android:id="@+id/button_layout"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"

							android:gravity="center"
							android:layout_gravity="center"
							android:orientation="horizontal">

						<Button
								android:id="@+id/cancel"
								style="@style/style_button_one"
								android:layout_width="100dp"
								android:layout_height="30dp"
								android:layout_marginBottom="4dp"
								android:layout_marginRight="10dp"
								android:layout_marginTop="4dp"
								android:background="@drawable/school_round_button_layout"
								android:text="Cancel"/>

						<Button
								android:id="@+id/ok_button"
								style="@style/style_button_one"
								android:layout_width="100dp"
								android:layout_height="30dp"
								android:layout_marginBottom="4dp"
								android:layout_marginRight="10dp"
								android:layout_marginTop="4dp"
								android:background="@drawable/school_round_button_layout"
								android:text="Add"/>

					</LinearLayout>

				</LinearLayout>


			</LinearLayout>


		</ScrollView>


	</FrameLayout>

</LinearLayout>

