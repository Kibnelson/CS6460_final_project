<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:layout_width="fill_parent"
			  android:layout_height="wrap_content"
			  android:orientation="horizontal">

	<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:orientation="horizontal">

		<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_margin="10dp"
				android:layout_gravity="center_vertical"
				android:orientation="vertical">

			<RelativeLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center_vertical"
					android:orientation="horizontal">


				<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:orientation="horizontal">
					<TextView
							android:id="@+id/groupPositionChild"
							style="@style/list_item_text"
							android:layout_alignParentLeft="true"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"

							android:layout_gravity="left|center"
							android:gravity="left|center"
							android:text=""
							android:textColor="@color/school_list_item_text"/>
					<TextView
							android:id="@+id/childname"
							style="@style/list_item_text"
							android:layout_alignParentLeft="true"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_gravity="left|center"
							android:gravity="left|center"
							android:text="testyyyy"
							android:textColor="@color/school_list_item_text"/>


				</LinearLayout>
			</RelativeLayout>

			<RelativeLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center_vertical"
					android:orientation="horizontal">


				<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:orientation="horizontal">

					<ImageView

							android:id="@+id/voice_q_c"
							android:layout_width="30dp"
							android:layout_height="30dp"
							android:layout_gravity="center"
							android:src="@drawable/voice"/>

					<ImageView

							android:id="@+id/write_q_c"
							android:layout_width="30dp"
							android:layout_height="30dp"
							android:layout_gravity="center"
							android:src="@drawable/write"/>

					<ImageView

							android:id="@+id/picture_q_c"
							android:layout_width="30dp"
							android:layout_height="30dp"
							android:layout_gravity="center"
							android:src="@drawable/camera"/>

					<ImageView

							android:id="@+id/recommend"
							android:layout_width="30dp"
							android:layout_height="30dp"
							android:layout_gravity="center"
							android:src="@drawable/recommend"/>




					<LinearLayout
							android:id="@+id/thumbsupLayout"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:orientation="horizontal">


						<TextView
								android:id="@+id/thumbsup"
								style="@style/list_item_text"
								android:layout_alignParentLeft="true"
								android:layout_width="20dp"
								android:layout_gravity="right"
								android:layout_height="wrap_content"
								android:gravity="right"
								android:layout_alignParentRight="true"
								android:text="0"
								android:textColor="@color/school_list_item_text"/>
						<ImageView

								android:id="@+id/thumbsupImage"
								android:layout_width="30dp"
								android:layout_height="30dp"
								android:layout_gravity="center"
								android:src="@drawable/thumb_up"/>

					</LinearLayout>


					<LinearLayout
							android:id="@+id/thumbsdownLayout"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:orientation="horizontal">


					<TextView
								android:id="@+id/thumbsdown"
								style="@style/list_item_text"
								android:layout_alignParentLeft="true"
								android:layout_width="20dp"
								android:layout_gravity="right"
								android:layout_height="wrap_content"
								android:gravity="right"
								android:layout_alignParentRight="true"
								android:text="0"
								android:textColor="@color/school_list_item_text"/>

						<ImageView

								android:id="@+id/thumbsDownImage"
								android:layout_width="30dp"
								android:layout_height="30dp"
								android:layout_gravity="center"
								android:src="@drawable/thumb_down"/>





					</LinearLayout>


				</LinearLayout>
			</RelativeLayout>


		</LinearLayout>

		<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_margin="10dp"
				android:layout_gravity="center_vertical"
				android:orientation="vertical">


			<RelativeLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center_vertical"
					android:orientation="vertical">

				<LinearLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_gravity="right"
						android:gravity="right"
						android:layout_alignParentRight="true"
						android:orientation="vertical">

				<TextView
						android:id="@+id/date"
						style="@style/list_item_text"
						android:layout_alignParentLeft="true"
						android:layout_width="150dp"
						android:layout_gravity="right"
						android:layout_height="wrap_content"
						android:gravity="right"
						android:layout_alignParentRight="true"
						android:text="testyyyy"
						android:textColor="@color/school_list_item_text"/>

				<TextView
						android:id="@+id/user"
						style="@style/list_item_text"
						android:layout_alignParentLeft="true"
						android:layout_width="150dp"
						android:layout_gravity="right"
						android:layout_height="wrap_content"
						android:gravity="right"
						android:layout_alignParentRight="true"
						android:text="user"
						android:textColor="@color/school_list_item_text"/>


				</LinearLayout>
			</RelativeLayout>


		</LinearLayout>


	</LinearLayout>

</LinearLayout>