<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/root"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:background="@drawable/school_layer_background_registration"
		android:orientation="vertical"
		>

	<FrameLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			>


		<ScrollView
				android:id="@+id/ScrollView01"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				>

			<LinearLayout
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:orientation="vertical">

				<LinearLayout
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:background="@drawable/school_form_background"
						android:gravity="center"
						android:orientation="vertical">

					<LinearLayout
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							style="@style/school_list_background_layout"
							android:gravity="center"
							android:orientation="horizontal">

						<TextView
								android:layout_width="140dp"
								android:layout_height="wrap_content"
								android:layout_gravity="left"
								android:gravity="left"
								style="@style/school_text_color"
								android:text="Content title">
						</TextView>

						<EditText
								android:id="@+id/contentTitle"
								android:layout_width="150dp"
								style="@style/school_text_color"
								android:background="@drawable/school_rectangle_editfield_layout"
								android:layout_height="wrap_content"
								android:layout_gravity="center"/>
					</LinearLayout>


				</LinearLayout>


				<LinearLayout
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:gravity="center"
						android:orientation="horizontal">

					<LinearLayout
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							style="@style/school_list_background_layout"
							android:gravity="center"
							android:orientation="horizontal">

						<TextView
								android:layout_width="140dp"
								android:layout_height="wrap_content"
								android:layout_gravity="left"
								android:gravity="left"
								android:text="Subject"
								style="@style/school_text_color"></TextView>


						<Spinner
								style="@style/school_edittext"
								android:id="@+id/subjects"
								android:padding="5dp"
								android:layout_alignParentRight="true"
								android:layout_width="150dp"
								android:layout_height="35dp"
								android:background="@drawable/school_btn_background"
								android:textSize="16dp"/>


					</LinearLayout>

				</LinearLayout>

				<LinearLayout
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:background="@drawable/school_form_background"
						android:gravity="center"
						android:orientation="vertical">

					<LinearLayout
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							style="@style/school_list_background_layout"
							android:gravity="center"
							android:orientation="horizontal">

						<TextView
								android:layout_width="140dp"
								android:layout_height="wrap_content"
								android:layout_gravity="left"
								android:gravity="left"
								style="@style/school_text_color"
								android:text="Tags">
						</TextView>

						<EditText
								android:id="@+id/tags"
								android:layout_width="150dp"
								style="@style/school_text_color"
								android:background="@drawable/school_rectangle_editfield_layout"
								android:layout_height="wrap_content"
								android:layout_gravity="center"/>
					</LinearLayout>


				</LinearLayout>


				<LinearLayout
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:gravity="center"
						android:orientation="vertical">

					<LinearLayout
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							style="@style/school_list_background_layout"
							android:gravity="center"
							android:orientation="horizontal">

						<TextView
								android:layout_width="140dp"
								android:layout_height="wrap_content"
								android:layout_gravity="left"
								android:gravity="left"
								style="@style/school_text_color"
								android:text="File(s)">
						</TextView>

						<Button
								android:id="@+id/addFile"
								style="@style/style_button_one"
								android:layout_width="150dp"
								android:layout_height="30dp"
								android:background="@drawable/school_round_button_layout"
								android:text="Add"
								android:layout_gravity="center"/>
					</LinearLayout>


				</LinearLayout>





			</LinearLayout>


		</ScrollView>



	</FrameLayout>

	<LinearLayout
			android:orientation="vertical"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">


		<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:gravity="center_vertical">


			<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent">



				<ListView
						android:id="@+id/fileList"
						style="@style/school_list_view"
						android:background="@drawable/school_layer_background"
						android:listSelector="@drawable/school_list_background_selector"></ListView>



				<LinearLayout
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:layout_alignParentBottom="true"
						android:gravity="center_vertical"
						android:orientation="horizontal">


					<Button
							style="@style/style_button_one_wizard"
							android:id="@+id/cancel"
							android:background="@color/appthemecolor"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_gravity="center_horizontal"
							android:layout_weight="1"
							android:layout_alignParentBottom="true"
							android:layout_alignParentLeft="true"
							android:gravity="center"
							android:text="Cancel"
							/>
					<View
							android:layout_width="1dip"
							android:layout_height="match_parent"
							android:background="#393b3e"
							android:layout_centerHorizontal="true"/>



					<Button
							android:id="@+id/saveButton"
							style="@style/style_button_one_wizard"
							android:background="@color/appthemecolor"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:layout_gravity="center_horizontal"
							android:layout_weight="1"

							android:layout_alignParentBottom="true"
							android:layout_alignParentRight="true"
							android:gravity="center"
							android:paddingBottom="6dip"
							android:paddingLeft="6dip"
							android:paddingRight="6dip"
							android:paddingTop="6dip"
							android:text="Save"/>
				</LinearLayout>
			</RelativeLayout>
		</LinearLayout>
	</LinearLayout>


</LinearLayout>

